extension .log
dateext
maxsize 256K
compress
missingok
notifempty

{{ if eq .chezmoi.os "darwin" -}}
"~/Library/Logs/beets/*.log" {
  rotate 30
  daily
}

"~/Library/Logs/Hazel/*.log" {
  rotate 30
  daily
}

"~/Library/Logs/Keyboard Maestro/*.log" {
  rotate 12
  weekly
}

"~/Library/Logs/logrotate/*.log" {
  rotate 30
  daily
}

"~/Library/Logs/rclone/*.log" {
  rotate 30
  daily
  maxage 90
  delaycompress
}
{{- end }}

{{ if eq .chezmoi.os "linux" -}}
"~/.local/state/logs/logrotate/*.log" {
  rotate 30
  daily
}

"~/.local/state/logs/rclone/*.log" {
  rotate 30
  daily
  maxage 90
  delaycompress
}
{{- end }}
