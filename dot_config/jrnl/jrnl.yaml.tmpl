# https://jrnl.sh/en/stable/reference-config-file/
encrypt: false
linewrap: auto
tagsymbols: '#@'
template: false
timeformat: '%Y-%m-%d %H:%M'
default_hour: 12
default_minute: 0
highlight: false
colors:
  body: none
  date: green
  tags: none
  title: none
{{ if (and (eq .chezmoi.os "darwin") (eq .chezmoi.arch "arm64") ) -}}
editor: mvim --nofork
{{- else }}
editor: vim
{{- end }}

# https://jrnl.sh/en/stable/advanced/#multiple-journal-files
# ~/Private/jrnl is a single git repo
journals:
  default:
    journal: ~/Private/jrnl/default/
    default_hour: 12
    default_minute: 0
    colors:
      body: none
      date: green
      tags: none
      title: none
  health:
    journal: ~/Private/jrnl/health/
    colors:
      body: none
      date: red
      tags: none
      title: none
  reading:
    journal: ~/Private/jrnl/reading/
    default_hour: 12
    default_minute: 0
    colors:
      body: none
      date: blue
      tags: none
      title: none
  work:
    journal: ~/Private/jrnl/work/
    default_hour: 9
    default_minute: 0
    colors:
      body: none
      date: magenta
      tags: none
      title: none
